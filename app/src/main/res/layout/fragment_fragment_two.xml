<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="542dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="14dp">


        <ListView
            android:id="@android:id/list"
            android:layout_width="322dp"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="0dp"
            android:visibility="invisible" />


        <Button
            android:id="@+id/sendbutton"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:padding="15dp"
            android:text="machinery"
            android:textColor="#fff"
            android:textSize="20dp" />


        <Button
            android:id="@+id/userbutton"
            android:layout_width="372dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="104dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="user"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/vandorbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="162dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="Vandor"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/uombutton"
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="222dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="Unit Of Measurment"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/smbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="281dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="Sub Material"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Materialbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="344dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="Material"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Sitebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="399dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="Site"
            android:textColor="#fff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Companybutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="456dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="Company"
            android:textColor="#fff"
            android:textSize="20dp" />


    </RelativeLayout>

</RelativeLayout>